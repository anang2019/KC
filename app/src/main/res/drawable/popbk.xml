<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- This is the main color -->
    <item>
        <shape>
            <!--    边框颜色 -->
            <corners android:radius="10dp"/>
            <solid android:color="#4279f7"/>
        </shape>
    </item>

    <!-- 给View的上 左  右设置8dp的边框 -->
    <item
        android:bottom="0.5dp"
        android:left="0.5dp"
        android:right="0.5dp"
        android:top="0.5dp"  >
        <shape>
            <!--     View填充颜色 -->
            <corners android:radius="10dp"/>
            <solid android:color="@color/popbg" />
        </shape>
    </item>

</layer-list>