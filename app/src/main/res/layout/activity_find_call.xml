<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_call"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/Gbg"
    android:orientation="vertical">
    <include layout="@layout/top_layout" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:text="不知道票号可不写,以下条件可任意选择"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/TS"
                android:layout_weight="1"
                android:id="@+id/textView7" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="8dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textColor="@color/second_text"
                android:layout_weight="3"
                android:inputType="textPersonName"
                android:hint="票号"
                android:paddingTop="0dp"
                android:paddingLeft="0dp"
                android:paddingBottom="0dp"
                android:layout_gravity="center_vertical"
                android:textColorHint="@color/TS"
                android:ems="10"
                android:id="@+id/editText9" />


            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:entries="@array/colorCD"
                style="@style/spinner_style1"
                android:id="@+id/spinner" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:layout_weight="4"
                style="@style/spinner_style1"
                android:id="@+id/spinner2" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:layout_weight="3"
                android:gravity="center"
                style="@style/spinner_style1"
                android:entries="@array/colorYW"
                android:id="@+id/spinner3" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                style="@style/spinner_style1"
                android:id="@+id/spinner4" />
            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                style="@style/spinner_style1"
                android:id="@+id/spinner5" />
            <Button
                android:text="统计库存"
                android:drawableLeft="@drawable/ic_menu_agenda"
                android:layout_width="0dp"
                android:drawablePadding="-15dip"
                android:layout_height="40dp"
                android:layout_weight="6"
                android:textColor="@color/TS"
                style="@style/my_button"
                android:id="@+id/button12"
                android:textSize="14sp" />
            <Button
            android:text="查询"
            android:drawableLeft="@drawable/ic_menu_search"
            android:layout_width="0dp"
            android:drawablePadding="-10dip"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:textColor="@color/TS"
            style="@style/my_button"
            android:id="@+id/button11"
            android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:id="@+id/textView15" />

            <TextView
                android:text="点击查询结果可查看具体内容"
                android:layout_width="0dp"
                android:textColor="@color/TS"
                android:layout_weight="2"
                android:layout_height="30dp"
                android:id="@+id/textView13" />


        </TableRow>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@drawable/findbk"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:background="@drawable/findbk"
                android:gravity="center_vertical"
                android:layout_height="40dp" >

                <TextView
                    android:text=" 票号"
                    android:textColor="@color/finf_white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_weight="2" />

                <TextView
                    android:text="产地"
                    android:textColor="@color/finf_white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_weight="2" />

                <TextView
                    android:text="仓库"
                    android:textColor="@color/finf_white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_weight="5" />

                <TextView
                    android:text="储位"
                    android:textColor="@color/finf_white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_weight="2" />

                <TextView
                    android:text="公司"
                    android:textColor="@color/finf_white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_weight="3" />

                <TextView
                    android:text="备注"
                    android:textColor="@color/finf_white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_weight="2" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/listView" />
            </TableRow>

        </LinearLayout>


    </TableLayout>

</LinearLayout>
