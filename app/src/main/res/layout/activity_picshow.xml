<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_picshow"
    android:background="@color/color_gray_deep"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.anang.kc.picshow">
    <include layout="@layout/top_layout" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/yout1"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <Button
                android:text="上传"
                android:layout_width="0dp"
                android:layout_height="40dp"
                style="@style/my_button"
                android:layout_weight="2"
                android:id="@+id/buttonpicdo" />
            <TextView
                android:text=""
                android:layout_width="0dp"
                android:textColor="@color/second_tl"
                android:layout_weight="2"
                android:id="@+id/hcts"
                android:layout_height="wrap_content" />
            <Button
                android:text="缓存"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                style="@style/my_button"
                android:id="@+id/buttonpicdo1" />
            <Button
                android:text="批量"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                style="@style/my_button"
                android:id="@+id/buttonpicdo2" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="10dp" >
            <ProgressBar android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:max="100"
                android:indeterminate="true"
                android:id="@+id/bar"
                style="@android:style/Widget.ProgressBar.Horizontal"/>
        </TableRow>
    </LinearLayout>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
                <uk.co.senab.photoview.PhotoView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView2" />
        </TableRow>

</LinearLayout>
