<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_my_popup"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/popbk"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content">


        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="24dp" >
            <TextView
                android:text="票号"
                android:textColor="@color/poptext"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
            <TextView
                android:text="2154a"
                android:textColor="@color/poptext1"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:id="@+id/textView20" />
            <TextView
                android:text="产地"
                android:textColor="@color/poptext"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
            <TextView
                android:text="苏丹丹"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textColor="@color/poptext1"
                android:layout_height="wrap_content"
                android:id="@+id/textView17" />
            <TextView
                android:text="花"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="@color/poptext1"
                android:layout_height="wrap_content"
                android:id="@+id/textViewC" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="24dp" >

            <TextView
                android:text="公司"
                android:textColor="@color/poptext"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:textSize="12sp" />

            <TextView
                android:text="石家庄大永"
                android:layout_width="0dp"
                android:layout_weight="11"
                android:textSize="12sp"
                android:textColor="@color/poptext1"
                android:layout_height="wrap_content"
                android:id="@+id/textView21" />
            <TextView
                android:text="吨数"
                android:textColor="@color/poptext"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
            <TextView
                android:text="100"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:textColor="@color/poptext1"
                android:layout_height="wrap_content"
                android:id="@+id/textView171" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="24dp" >
            <TextView
                android:text="入货日期"
                android:textColor="@color/poptext"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:textSize="12sp" />

            <TextView
                android:text="2017-08-30"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:textColor="@color/poptext1"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/rhdate" />
            <TextView
                android:text="储位"
                android:textColor="@color/poptext"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:textSize="12sp" />

            <TextView
                android:text="a1-2"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:textColor="@color/poptext1"
                android:layout_height="wrap_content"
                android:id="@+id/textView23" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content" >

            <TableLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/popuplist">

            </TableLayout>

        </TableRow>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/to_second">

            <TableRow
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="match_parent" >


                <TextView
                    android:text="饱满度"
                    android:layout_width="50dp"
                    android:layout_height="24dp"
                    android:textColor="@color/poptext"
                    android:gravity="center_vertical"
                    android:id="@+id/textView26" />

                <RatingBar android:id="@+id/small_ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    style="@style/starRatingBar" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="match_parent" >


                <TextView
                    android:text="异色粒"
                    android:layout_width="50dp"
                    android:layout_height="24dp"
                    android:textColor="@color/poptext"
                    android:gravity="center_vertical" />

                <RatingBar android:id="@+id/small_ratingbar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    style="@style/starRatingBar" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="match_parent" >


                <TextView
                    android:text="花    白"
                    android:layout_width="50dp"
                    android:layout_height="24dp"
                    android:textColor="@color/poptext"
                    android:gravity="center_vertical"
                    android:textSize="14sp" />

                <RatingBar android:id="@+id/small_ratingbar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    style="@style/starRatingBar" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:id="@+id/bar1row"
                android:layout_height="match_parent" >
                <Button
                    android:text="查看图片"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:onClick="LikeOld"
                    style="@style/my_button"
                    android:id="@+id/bar1t" />

                <ProgressBar android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:visibility="invisible"
                    android:id="@+id/bar1"
                    android:layout_weight="1"
                    style="@android:style/Widget.ProgressBar.Horizontal"/>

            </TableRow>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
